# Save exact versions (no ^ or ~ in package.json)
save-exact=true

# Use lockfile version 2
lockfile-version=2

# Automatically install peer dependencies
legacy-peer-deps=false

# Strict SSL
strict-ssl=true

# Fund messages
fund=false

# Audit level
audit-level=moderate

# Progress bar
progress=true

# Log level
loglevel=warn

# Engine strict
engine-strict=true
