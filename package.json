{
  "//": [
    "SEO: Tooling keeps code style consistent, preventing issues that harm search engine crawlability.",
    "Accessibility: Linting enforces semantic HTML and ARIA patterns flagged by recommended configs.",
    "Performance: Formatter and linters ensure minimal bundle size by avoiding stray assets and whitespace.",
    "Safety: Dependencies are pinned to exact versions to avoid supply-chain surprises."
  ],
  "type": "module",
  "private": true,
  "scripts": {
    "jekyll": "ruby vendor/gems/jekyll/bin/jekyll",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint .",
    "lint:html": "npx htmlhint \"_site/**/*.html\" || true",
    "lint:css": "stylelint \"**/*.{css,scss}\"",
    "lint:css:fix": "stylelint \"**/*.{css,scss}\" --fix",
    "format": "prettier --write .",
    "build:css": "node scripts/build-css.js",
    "watch:css": "sass --load-path=_sass assets/css/style.scss:assets/css/style.css --watch --no-source-map",
    "start": "npm run build && npm run serve",
    "dev": "npm run build:css && npm run jekyll -- build && http-server _site -p 4000 -c-1",
    "dev:watch": "concurrently \"npm run watch:css\" \"npm run jekyll -- build --watch\" \"http-server _site -p 4000 -c-1\"",
    "build": "npm run build:css && npm run jekyll -- build",
    "postbuild": "node scripts/post-build-link.js",
    "serve": "http-server _site -p 4000 -c-1",
    "build:site": "npm run build",
    "build:full": "npm run build:css && npm run build:logos && npm run jekyll -- build",
    "build:logos": "node scripts/generate-png-logos.js",
    "test": "npx playwright test",
    "test:headed": "npx playwright test --headed",
    "test:ui": "npx playwright test --ui",
    "test:report": "npx playwright show-report",
    "test:debug": "npx playwright test --debug",
    "verify": "npm run lint && npm run build && npm test",
    "test:contrast": "node scripts/check-contrast.js",
    "scan:contrast": "node scripts/scan-css-contrast.cjs",
    "check:wcag-contrast": "node scripts/check-contrast-wcag.js",
    "audit:compliance": "node scripts/compliance-audit.js",
    "audit": "npm run audit:compliance && npm run check:wcag-contrast",
    "improve": "node scripts/improve-site.cjs",
    "improve:check": "node scripts/improve-site.cjs --check",
    "improve:fix": "node scripts/improve-site.cjs --fix",
    "improve:report": "node scripts/improve-site.cjs --report",
    "deploy": "pwsh -File deploy-to-stone.ps1",
    "deploy:force": "pwsh -File deploy-to-stone.ps1 -Force",
    "deploy:skip-tests": "pwsh -File deploy-to-stone.ps1 -SkipTests",
    "images:webp": "node scripts/convert-images-to-webp.js",
    "slugify": "node scripts/slugify.js",
    "sync:thumbtack": "node scripts/sync_thumbtack_reviews.js",
    "validate": "node scripts/validate-all.js",
    "fix:encoding": "node scripts/fix-encoding.js"
  },
  "devDependencies": {
    "@hint/configuration-development": "^8.3.20",
    "@playwright/test": "^1.57.0",
    "cheerio": "1.1.2",
    "concurrently": "9.2.1",
    "eslint": "8.57.1",
    "eslint-config-standard": "17.1.0",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-n": "16.6.2",
    "eslint-plugin-promise": "6.6.0",
    "glob": "^13.0.0",
    "hint": "^7.0.0",
    "htmlhint": "1.8.0",
    "http-server": "^14.1.1",
    "js-yaml": "4.1.1",
    "playwright": "^1.57.0",
    "prettier": "3.7.4",
    "rimraf": "^6.1.2",
    "sass": "^1.97.1",
    "sharp": "0.34.5",
    "stylelint": "^16.26.1",
    "stylelint-config-standard-scss": "16.0.0",
    "stylelint-scss": "6.8.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "bootstrap": "^5.3.8",
    "commander": "^14.0.2"
  }
}
