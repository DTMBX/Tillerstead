{
  "repository": {
    "type": "git",
    "url": "https://github.com/DTB396/Tillerstead.com"
  },
  "license": "MIT",
  "description": "Tillerstead LLC - Premium Tile & Waterproofing Contractor Website",
  "scripts": {
    "build": "bundle exec jekyll build",
    "build:prod": "npm run minify:css && npm run minify:js && bundle exec jekyll build",
    "dev": "bundle exec jekyll serve --livereload",
    "serve:test": "bundle exec jekyll serve --port 4173 --no-watch",
    "clean": "rm -rf _site .jekyll-cache",
    "deploy": "npm run build:prod && git add . && git commit -m 'build: deploy updates' && git push",
    "test": "npm run test:nav",
    "test:nav": "playwright test tests/navigation.spec.js",
    "test:nav:headed": "playwright test tests/navigation.spec.js --headed",
    "test:nav:debug": "playwright test tests/navigation.spec.js --debug",
    "test:nav:mobile": "playwright test tests/navigation.spec.js --project=mobile-chrome-iphone-16-pro-max",
    "optimize": "node scripts/optimize-repo.js",
    "optimize:logos": "node scripts/optimize-logo-system.js",
    "optimize:images": "node scripts/optimize-images.js",
    "scan:links": "node scripts/scan-links.js",
    "minify:css": "cleancss -o assets/css/bundle.min.css assets/css/root-vars.css assets/css/modern/modern.css assets/css/ux-enhancements.css",
    "minify:js": "terser assets/js/main.js assets/js/ux-enhancements.js assets/js/scroll-fix.js -o assets/js/bundle.min.js --compress --mangle",
    "bundle:css": "concat-cli -f assets/css/root-vars.css assets/css/modern/modern.css assets/css/ux-enhancements.css -o assets/css/bundle.css",
    "bundle:js": "concat-cli -f assets/js/main.js assets/js/ux-enhancements.js assets/js/scroll-fix.js -o assets/js/bundle.js",
    "lighthouse": "lighthouse https://tillerstead.com --output html --output-path ./lighthouse-report.html --view",
    "lighthouse:local": "lighthouse http://localhost:4000 --output html --output-path ./lighthouse-local.html --view",
    "analyze": "npm run lighthouse && npm run scan:links && npm run optimize",
    "site:repair": "node scripts/site-repair-tool.js",
    "seo:audit": "node scripts/seo-audit.js",
    "images:webp": "node scripts/convert-to-webp.js",
    "images:avif": "node scripts/convert-to-avif.js",
    "images:optimize": "npm run images:webp && npm run images:avif && node scripts/optimize-images.js",
    "format": "prettier --write \"**/*.{js,css,html,md,json}\"",
    "format:check": "prettier --check \"**/*.{js,css,html,md,json}\"",
    "unused:css": "purgecss --css assets/css/**/*.css --content _site/**/*.html --output assets/css/purged/",
    "unused:detect": "node scripts/detect-unused.js",
    "validate:html": "html-validate \"_site/**/*.html\"",
    "validate:links": "node scripts/validate-links.js",
    "perf:bundle": "webpack-bundle-analyzer stats.json",
    "security:audit": "npm audit --production",
    "precommit": "npm run format && npm run validate:html && npm run test",
    "postbuild": "npm run optimize:images"
  },
  "author": "DTB396",
  "version": "1.0.0",
  "name": "tillerstead-com",
  "dependencies": {
    "jspdf": "2.5.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "@size-limit/preset-app": "^11.1.6",
    "autoprefixer": "^10.4.20",
    "chalk": "4.1.2",
    "cheerio": "^1.0.0",
    "clean-css-cli": "^5.6.3",
    "compression": "^1.7.5",
    "concat-cli": "^4.0.0",
    "critical": "^7.2.1",
    "cross-env": "^7.0.3",
    "cssnano": "^7.0.6",
    "dotenv": "^16.4.7",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "glob": "^11.0.0",
    "helmet": "^8.0.0",
    "html-minifier-terser": "^7.2.0",
    "html-validate": "^8.24.1",
    "husky": "^9.1.7",
    "imagemin": "^9.0.0",
    "imagemin-avif": "^0.1.1",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^10.0.0",
    "imagemin-webp": "^8.0.0",
    "inquirer": "^12.2.0",
    "lighthouse": "^12.2.1",
    "lint-staged": "^15.2.11",
    "marked": "^15.0.4",
    "npm-run-all": "^4.1.5",
    "ora": "^8.1.1",
    "postcss": "^8.4.49",
    "postcss-cli": "^11.0.0",
    "postcss-preset-env": "^10.1.3",
    "prettier": "^3.4.2",
    "purgecss": "^6.0.0",
    "rss": "^1.2.2",
    "schema-dts": "^1.1.2",
    "semver": "^7.6.3",
    "sharp": "^0.33.5",
    "sitemap": "^8.0.0",
    "size-limit": "^11.1.6",
    "stylelint": "^16.12.0",
    "stylelint-config-standard": "^36.0.1",
    "svgo": "^3.3.2",
    "terser": "^5.36.0",
    "webpack-bundle-analyzer": "^4.10.2"
  }
}
